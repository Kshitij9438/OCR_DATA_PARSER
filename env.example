# Google Cloud Vision API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Option 1: Use JSON credentials file
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Option 2: Use individual environment variables (alternative to JSON file)
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_CLOUD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
# GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
# GOOGLE_CLOUD_CLIENT_ID=your-client-id

# Server Configuration
PORT=8000
DEBUG=false

# Railway Configuration (optional)
RAILWAY_ENVIRONMENT=production
